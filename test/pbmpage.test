echo "Error messages should appear below the line." 1>&2
echo "-----------------------------------------------------------" 1>&2

pbmpage -a3 1 || echo "Expected error 1"
pbmpage 0 || echo "Expected error 2"
pbmpage 4 || echo "Expected error 3"
